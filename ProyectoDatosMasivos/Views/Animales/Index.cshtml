@model IEnumerable<ProyectoDatosMasivos.Models.AnimalesModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ingresar animal", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_comun)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_cientifico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Familia)
        </th>
